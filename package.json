{
  "name": "lido-menu",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/Zacros/lido-menu.git",
  "author": "Zac",
  "license": "MIT",
  "scripts": {
    "build-css": "postcss src/styles.css -o dist/styles.css",
    "copy-html": "cp src/index.html dist/index.html",
    "copy-icons": "mkdir -p dist/icons && cp src/icons/* dist/icons/",
    "build": "yarn build-css && yarn copy-html && yarn copy-icons"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.4"
  }
}
